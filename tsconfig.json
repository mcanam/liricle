{
      "compilerOptions": {
            "target": "ESNext",
            "module": "ESNext",
            "moduleResolution": "Node",
            "sourceMap": true,
            "noEmitOnError": true,
            "esModuleInterop": true,
            "noImplicitAny": true,
            "noUnusedParameters": true,
            "noUnusedLocals": true,
            "forceConsistentCasingInFileNames": true,
            "strict": true,
            "skipLibCheck": true
      },
      "include": ["src"],
      "exclude": ["src/tests"]
}
